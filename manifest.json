{
  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "512": "icons/timer.png"
  },
  "permissions": ["<all_urls>", "tabs", "unlimitedStorage", "storage"],
  "background": {
    "scripts": ["./src/background/index.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["borderify.js"]
    }
  ]
}
